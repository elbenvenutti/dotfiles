[user]
  name = Isma Perez
  email = iperez@qmetric.co.uk
[core]
  excludesfile = .gitignore_global
  editor = vim
[color]
  diff = auto
  status = auto
  branch = auto
[alias]
  s = stash
  sp = stash pop
  co = checkout
  ci = commit
  rb = rebase
  st = status
  c = commit -m
  di = diff
  dc = diff --cached
  p = pull
  ps = push
  plre = pull --rebase
  out = log origin..HEAD
  lol = log --pretty=oneline --abbrev-commit --graph --decorate
  lola = log --pretty=oneline --abbrev-commit --graph --decorate --all
  hist = log --color --pretty=format:\"%C(yellow)%h %C(green)%ad %C(reset) %s%C(bold red)%d%C(reset) %C(reset) %C(blue)[%an]%C(reset)\" --relative-date --decorate
  unstage = reset HEAD
  undocommit = git reset --soft HEAD^
  diff = difftool
  branches = !git-branches
  retrack = "!retrack() { git config \"branch.$1.remote\" $(dirname \"$2\"); git config \"branch.$1.merge\" \"refs/heads/$(basename \"$2\")\"; };retrack"
  cp = cherry-pick
[push]
  default = current
[branch "master"]
  rebase = true
[branch]
  autosetuprebase = always
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process
[merge]
  tool = vimdiff
